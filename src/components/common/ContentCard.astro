---
import { Icon } from 'astro-icon/components';

interface Props {
  href: string;
  title: string;
  subtitle: string;
  createdAt: string;
  timeToRead?: number;
}
const { href, title, subtitle, createdAt, timeToRead } = Astro.props as Props;

const ariaLabel = `Card for ${title}`;
---

<article aria-label={ariaLabel}>
  <a href={href} class="p-0">
    <h1 class="text-2xl">{title}</h1>
  </a>

  <p class="mt-1 text-sm">{subtitle}</p>

  <div class="mt-2 text-xs flex items-center gap-8">
    <p><Icon name="tabler:calendar" /> {createdAt}</p>
    {
      timeToRead && (
        <p>
          <Icon name="tabler:clock" /> {timeToRead} min read
        </p>
      )
    }
  </div>
</article>
